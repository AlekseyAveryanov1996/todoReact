.task
  display: flex
  gap: 12px
  &__value
    flex-grow: 1
  &__check
    flex-shrink: 0
    width 18px
    height: 18px
    border-radius: 50%
    border: 2px solid #4EA8DE
    cursor pointer
    display: flex
    justify-content: center
    align-items: center
    box-sizing: border-box
    svg
      display: none
      width 10px
      height: 7px
  &__delete
    width 24px
    height: 24px
    cursor pointer
    display: flex
    justify-content: center
    align-items: center
    &:hover
      svg
        fill: #8284FA
    svg
      fill: #808080
  &_sacsess
    .task__value
      text-decoration: line-through
    .task__check
      background: #5E60CE
      border: none
      svg
        display: block